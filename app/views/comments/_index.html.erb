<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
    <% end %>
  </ul>
<% end %>

<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
      <hr>
      <p><%= comment.user.name %></p>
      <p><%= comment.content %></p>
      <p><%= image_tag comment.image.url, class: 'rounded-circle' if comment.image.present?%></p>
      <% if comment.user == current_user %>
        <p><%= link_to "コメント編集", edit_post_comment_path(@post, comment), remote: true %></p>
        <p><%= link_to 'コメント削除', post_comment_path(comment.post_id, comment.id), method: :delete, remote: true %></p>
      <% end %>
      <p class = "hr"></p>
    <% end %>
  <% end %>
</ul>
